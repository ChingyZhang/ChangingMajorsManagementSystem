    function bb() {
        $.ajax({
            type: 'POST',
            url: '/Student/DelectUploadStu',
            data: {},
            success: function (data) {
                $("#delectUpload").html(data);
            }
        });
    }

    function aa() {
        $.ajax({
            type: 'POST',
            url: '/Student/AddStu',
            data: {},
            success: function (data) {
